<div class="text-center">
  <h2>{{title}}</h2>
  <p id="content" data-id = {{id}}>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if postUser}}
    <button class="btn btn-primary m-2" id = "delete">Delete post</button>
    <button class="btn btn-primary m-2" id = "edit">Edit post</button>
  {{/if}}
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Leave a comment:</label>
    <textarea class="form-control" id="commentText" rows="3"></textarea>
    <button class="btn btn-primary mt-2" id = "comment">Add comment</button>
  </div>
  
  {{#each comments as |comment|}}
  <div class="row mb-4 post">
  <div class="col-md-10 text-start">
    <h6>{{comment.user.name}} on {{format_date comment.date_created}}:</h6>
    <p>
      {{comment.comment}}
    </p>
  </div>
</div>
  {{/each}}
</div>
<script src="/js/post.js"></script>
